        <div class="col-md-10 ms-sm-auto col-lg-10 px-md-4">
            <div id="sales-page">
            <h1>Sales History</h1>
                <button class="filter-btn nav-link nav-item dropdown" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fa-solid fa-sliders"></i>Filter
                </button>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item-sales" href="/bill_summary"><i class=""></i> bill summary</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li><a class="dropdown-item-sales" href="/best_seller"><i class=""></i> bestseller</a></li>
                </ul>

            <table class="table-sales-history">
                <thead class="sales-th">
                    <tr>
                        <th class="centered">ID</th>
                        <th class="centered">Date</th>
                        <th class="centered">Product ID</th>
                        <th class="number centered">Number of Items</th>
                        <th class="price-his centered">Price</th>
                    </tr>
                </thead>
                <tbody class="sales-tbody">
                  <% let previousBillId = null; %>
                  <% let firstRow = true; %>
                  <% sales.forEach(sale => { %>
                      <% if (previousBillId !== sale.bill_id) { %>
                          <% if (!firstRow) { %>
                              <tr>
                                  <td colspan="5"><hr class="dropdown-divider" /></td>
                              </tr>
                          <% } %>
                          <tr>
                              <td class="centered"><%= sale.bill_id %></td>
                              <td class="centered"><%= sale.bill_date %></td>
                              <td class="centered"><%= sale.product_id %></td>
                              <td class="number centered"><%= sale.number_of_items %></td>
                              <td class="price-his centered"><%= sale.bill_price %></td>
                          </tr>
                          <% firstRow = false; %>
                      <% } else { %>
                          <tr>
                              <td colspan="2"></td> 
                              <td class="centered"><%= sale.product_id %></td>
                              <td class="number centered"><%= sale.number_of_items %></td>
                              <td class="price-his centered"><%= sale.bill_price %></td>
                          </tr>
                      <% } %>
                      <% previousBillId = sale.bill_id; %>
                  <% }); %>
              </tbody>
              
              
              
            </table>
