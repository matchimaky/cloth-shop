                <p class="sales-filter-topic">Bestseller</p>
                <table class="table-sales-history" >
                  
                <table class="table-sales-history">
                  <thead>
                      <tr>
                          <th class="centered">Product ID</th>
                          <th class="centered">Product name</th>
                          <th class="pro-im centered">product images</th>
                          <th class="centered">sales count</th>
                          <th class="tol centered">total income</th>
                          <tr>
                            <td colspan="5">
                                <hr class="dropdown-divider" />
                            </td>
                        </tr>
                  </thead>
                 
                  <tbody class="sales-tbody">
                    <% products.forEach((product, index) => { %>
                        <tr>
                            <td class="centered"><%= product.product_id %></td>
                            <td class="centered"><%= product.product_name %></td>
                            <td class="pro-im centered"><img src="<%= product.product_images1 %>" alt="Product Image"></td>
                            <td class="centered"><%= product.sales_count %></td>
                            <td class="tol centered"><%= product.total_sales %></td>
                        </tr>
                        <% if (index !== products.length - 1) { %>
                            <tr>
                                <td colspan="5">
                                    <hr class="dropdown-divider" />
                                </td>
                            </tr>
                        <% } %>
                    <% }); %>
