  <script>
    function openNav() {
      document.getElementById("mySidebar").style.width = "250px";
      document.getElementById("main").style.marginLeft = "250px";
      document.querySelectorAll('.navbar-brand, .welcome-title, .welcome-content').forEach(function(el) {
      el.style.color = "rgba(0, 0, 0, 0.7)"; 
    });
  }
    
    function closeNav() {
      document.getElementById("mySidebar").style.width = "0";
      document.getElementById("mySidebarr").style.width = "0";
      document.getElementById("main").style.marginLeft= "0";
      document.querySelectorAll('.navbar-brand, .welcome-title, .welcome-content').forEach(function(el) {
      el.style.color = "#000000"; 
    });
  }
 
  function toggleSidebar() {
    document.getElementById("mySidebarr").style.width = "250px";
      document.getElementById("main").style.marginLeft = "250px";
  }
  $(function() {
        var $window = $(window);
        var $sidebar = $('.sidebar');
        var $footer = $('#footer');

        $window.on('scroll', function() {
            if ($window.scrollTop() + $window.height() >= $footer.offset().top) {
                $sidebar.removeClass('scroll');
            } else {
                $sidebar.addClass('scroll');
            }
        }).scroll();
    });
    </script>
