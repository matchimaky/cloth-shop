  function handleFileSelect(event) {
        const fileInput = event.target;
        const fileListContainer = document.getElementById('selected-file-names');
        const fileListInput = document.getElementById('product-image'); 
        
        if (fileInput.files.length > 0) {
            const fileList = Array.from(fileInput.files).map(file => `${file.name}, `).join('');
            fileListContainer.innerHTML = fileList;
            document.getElementById('selected-files-container').style.display = 'block';
            
            
            const fileNames = Array.from(fileInput.files).map(file => file.name).join(', ');
            fileListInput.value = fileNames;
        } else {
            document.getElementById('selected-files-container').style.display = 'none';
            fileListInput.value = ''; 
        }
    }
    function setInputValue(value) {
        document.getElementById('category_name_input').value = value;
    }

    

    window.addEventListener('DOMContentLoaded', function() {
        fetch('/categories')
            .then(response => response.json())
            .then(categories => {
                const dropdownMenu = document.querySelector('.nav-cate-item');
                categories.forEach(category => {
                    const listItem = document.createElement('li');
                    const anchor = document.createElement('a');
                    anchor.classList.add('dropdown-item-sales');
                    anchor.textContent = category;
                    anchor.addEventListener('click', function() {
                        setInputValue(category);
                    });
                    listItem.appendChild(anchor);
                    dropdownMenu.appendChild(listItem);
                    const divider = document.createElement('hr');
                    dropdownMenu.appendChild(divider);
                });
            })
            .catch(error => console.error('Error fetching categories:', error));
    });

